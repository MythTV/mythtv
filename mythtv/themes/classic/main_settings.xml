<?xml version="1.0" encoding="utf-8"?>
<mythmenu name="SETUP">

    <button>
        <type>SETTINGS_GENERAL</type>
        <text>General</text>
        <description>Core MythTV behavior and system settings</description>
        <action>SETTINGS MAINGENERAL</action>
    </button>

    <button>
        <type>SETTINGS_APPEARANCE</type>
        <text>Appearance</text>
        <description>pick the theme, font, size, and locale</description>
        <action>SETTINGS APPEARANCE</action>
    </button>

    <button>
        <type>SCREENSETUPWIZARD</type>
        <text>Screen Setup Wizards</text>
        <description>Compensate for TVs with overscan</description>
        <action>SCREENSETUPWIZARD</action>
    </button>

    <!-- Keep this in synch with mythtv/themes/defaultmenu/util_menu.xml -->
    <button>
        <type>SETUP_KEYS</type>
        <text>Edit Keys</text>
        <description>Change MythTV key bindings.</description>
        <action>SETUP_KEYS</action>
    </button>

    <button>
        <type>SETTINGS_TV</type>
        <text>TV Settings</text>
        <description>Settings for TV recording and playback</description>
        <action>MENU tv_settings.xml</action>
    </button>

    <!-- Keep this in synch with mythtv/themes/defaultmenu/media_settings.xml -->
    <button>
        <type>SETTINGS_MUSIC</type>
        <text>Music Settings</text>
        <description>Configure playback and CD ripping</description>
        <action>CONFIGPLUGIN mythmusic</action>
        <depends>mythmusic</depends>
    </button>

    <!-- Keep this in synch with mythtv/themes/defaultmenu/media_settings.xml -->
    <button>
        <type>SETTINGS_VIDEO</type>
        <text>Videos Settings</text>
        <description>Configure playback and DVD ripping</description>
        <action>CONFIGPLUGIN mythvideo</action>
        <depends>mythvideo</depends>
    </button>

    <!-- Keep this in synch with mythtv/themes/defaultmenu/util_menu.xml -->
    <button>
        <type>SETTINGS_STREAM</type>
        <text>MythStream Settings</text>
        <action>CONFIGPLUGIN mythstream</action>
        <depends>mythstream</depends>
    </button>

    <!-- Keep this in synch with mythtv/themes/defaultmenu/media_settings.xml -->
    <button>
        <type>SETTINGS_IMAGES</type>
        <text>Images Settings</text>
        <description>Configure display of image gallery</description>
        <action>CONFIGPLUGIN mythgallery</action>
        <depends>mythgallery</depends>
    </button>

    <!-- Keep this in synch with mythtv/themes/defaultmenu/media_settings.xml -->
    <button>
        <type>SETTINGS_GAME</type>
        <text>Game Settings</text>
        <description>Configure playback of games</description>
        <action>CONFIGPLUGIN mythgame</action>
        <depends>mythgame</depends>
    </button>

    <!-- Keep this in synch with mythtv/themes/defaultmenu/info_settings.xml -->
    <button>
        <type>SETTINGS_WEATHER</type>
        <text>Weather Settings</text>
        <description>Weather locale and sources</description>
        <action>CONFIGPLUGIN mythweather</action>
        <depends>mythweather</depends>
    </button>

    <!-- Keep this in synch with mythtv/themes/defaultmenu/info_settings.xml -->
    <button>
        <type>SETTINGS_WEATHER</type>
        <text>Weather Station Settings</text>
        <action>CONFIGPLUGIN mythwstation</action>
        <depends>mythwstation</depends>
    </button>

    <!-- Keep this in synch with mythtv/themes/defaultmenu/info_settings.xml -->
    <button>
        <type>SETTINGS_NEWS</type>
        <text>News Settings</text>
        <description>Choose which news sources interest you</description>
        <action>CONFIGPLUGIN mythnews</action>
        <depends>mythnews</depends>
    </button>

    <!-- Keep this in synch with mythtv/themes/defaultmenu/info_settings.xml -->
    <button>
        <type>SETTINGS_WEBPAGE</type>
        <text>Web Settings</text>
        <description>Manage web bookmarks</description>
        <action>CONFIGPLUGIN mythbrowser</action>
        <depends>mythbrowser</depends>
    </button>

    <!-- Keep this in synch with mythtv/themes/defaultmenu/info_settings.xml -->
    <button>
        <type>SETTINGS_RECIPE</type>
        <text>Recipe Settings</text>
        <action>CONFIGPLUGIN mythRecipe</action>
        <depends>mythRecipe</depends>
    </button>

    <!-- Keep this in synch with mythtv/themes/defaultmenu/media_settings.xml -->
    <button>
        <type>SETTINGS_ARCHIVE</type>
        <text>Archive Files Settings</text>
        <description>Configure how to archive video to DVD</description>
        <action>CONFIGPLUGIN mytharchive</action>
        <depends>mytharchive</depends>
    </button>

    <button>
        <type>SETTINGS_ZONEMINDER</type>
        <text>ZoneMinder Settings</text>
        <description>Set up surveillance software</description>
        <action>CONFIGPLUGIN mythzoneminder</action>
        <depends>mythzoneminder</depends>
    </button>

</mythmenu>
