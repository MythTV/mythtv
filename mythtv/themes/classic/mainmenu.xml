<?xml version="1.0" encoding="utf-8"?>
<mythmenu name="MAIN">

    <button>
        <type>TV</type>
        <text>TV</text>
        <description>View and schedule recordings</description>
        <action>MENU tvmenu.xml</action>
    </button>

    <button>
        <type>NET_VIDEO</type>
        <text>Internet Video</text>
        <action>MENU netvisionmenu.xml</action>
        <description>Search and browse internet video sites</description>
        <depends>mythnetvision</depends>
    </button>

    <button>
        <type>MUSIC</type>
        <text>Music</text>
        <description>Play music files and internet radio streams</description>
        <action>PLUGIN mythmusic</action>
        <depends>mythmusic</depends>
    </button>

    <button>
        <type>VIDEO</type>
        <text>Videos</text>
        <description>Browse the video library</description>
        <action>MENU videomenu.xml</action>
    </button>

    <button>
        <type>STREAM</type>
        <text>Play online streams</text>
        <action>PLUGIN mythstream</action>
        <depends>mythstream</depends>
    </button>

    <button>
        <type>IMAGES</type>
        <text>Images</text>
        <action>PLUGIN mythgallery</action>
        <description>Look at pictures</description>
        <depends>mythgallery</depends>
    </button>

    <button>
        <type>GAME</type>
        <text>Games</text>
        <action>PLUGIN mythgame</action>
        <description>Play games</description>
        <depends>mythgame</depends>
    </button>

    <button>
        <type>WEATHER</type>
        <text>Weather</text>
        <description>View the weather forcast</description>
        <action>PLUGIN mythweather</action>
        <depends>mythweather</depends>
    </button>

    <button>
        <type>WEATHER</type>
        <text>Weather Station</text>
        <description>View weather statistics</description>
        <action>PLUGIN mythwstation</action>
        <depends>mythwstation</depends>
    </button>

    <button>
        <type>NEWS</type>
        <text>News Feeds</text>
        <description>Keep up with the news</description>
        <action>PLUGIN mythnews</action>
        <depends>mythnews</depends>
    </button>

    <button>
        <type>WEBPAGE</type>
        <text>Web</text>
        <description>Browse the web</description>
        <action>PLUGIN mythbrowser</action>
        <depends>mythbrowser</depends>
    </button>

    <button>
        <type>WEBPAGE</type>
        <text>Email</text>
        <description>View email</description>
        <action>MEDIA WebBrowser https://skyid.sky.com/signin/email/</action>
    </button>

    <button>
        <type>RECIPE</type>
        <text>Recipes</text>
        <action>PLUGIN mythRecipe</action>
        <depends>mythRecipe</depends>
    </button>

    <button>
        <type>ARCHIVE</type>
        <text>Archive Files</text>
        <description>Backup a program to DVD</description>
        <action>PLUGIN mytharchive</action>
        <depends>mytharchive</depends>
    </button>

    <button>
        <type>ZONEMINDER</type>
        <text>ZoneMinder</text>
        <description>View live and recorded home surveillance camera images</description>
        <action>PLUGIN mythzoneminder</action>
        <depends>mythzoneminder</depends>
    </button>

    <button>
        <type>SETUP</type>
        <text>Setup</text>
        <description>Settings for TV, Images, Music, Video, Weather, etc.</description>
        <action>MENU main_settings.xml</action>
        <password>SetupPinCode</password>
    </button>

</mythmenu>
