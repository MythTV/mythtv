<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>
    <window name="osd_message">
        <fontdef name="medium" face="DejaVu Sans">
            <pixelsize>22</pixelsize>
            <color>#FFFFFF</color>
            <shadowoffset>1,1</shadowoffset>
            <shadowcolor>#000000</shadowcolor>
        </fontdef>
        <area>250,42,300,58</area>
        <shape name="background">
            <area>0,0,100%,100%</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
            <line color="#222222" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        <textarea name="message_text">
            <font>medium</font>
            <area>12,17,275,25</area>
            <align>hcenter,vcenter</align>
        </textarea>
    </window>

    <window name="osd_input">
        <fontdef name="medium" face="DejaVu Sans">
            <pixelsize>22</pixelsize>
            <color>#FFFFFF</color>
            <shadowoffset>1,1</shadowoffset>
            <shadowcolor>#000000</shadowcolor>
        </fontdef>
        <area>69,42,106,58</area>
        <shape name="background">
            <area>0,0,100%,100%</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
            <line color="#222222" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        <textarea name="osd_number_entry">
            <font>medium</font>
            <area>12,17,81,25</area>
            <align>hcenter,vcenter</align>
        </textarea>
    </window>

    <window name="osd_status">
        <fontdef name="small" face="DejaVu Sans">
            <pixelsize>18</pixelsize>
            <color>#FFFFFF</color>
            <shadowoffset>1,1</shadowoffset>
            <shadowcolor>#000000</shadowcolor>
        </fontdef>
        <fontdef name="medium" face="DejaVu Sans">
            <pixelsize>22</pixelsize>
            <color>#FFFFFF</color>
        </fontdef>
        <area>0,483,100%,100%</area>
        <imagetype name="background">
            <area>0,0,100%,100%</area>
            <filename>osd/osd-mid.png</filename>
        </imagetype>
        <textarea name="title">
            <font>medium</font>
            <area>18,8,375,25</area>
            <align>left,top</align>
        </textarea>
        <textarea name="playedtime">
            <font>small</font>
            <area>43,52,187,25</area>
            <align>left</align>
            <template>%PLAYEDTIME%</template>
        </textarea>
        <textarea name="description">
            <font>small</font>
            <area>570,52,187,25</area>
            <align>right</align>
            <template>%(|REMAININGTIME|)%%(|BEHINDTIME|)%</template>
        </textarea>
        <clock name="clock">
            <area>590,8,187,25</area>
            <font>medium</font>
            <template>%TIME%</template>
            <align>right,top</align>
        </clock>
        <progressbar name="position">
            <area>0,52,662,24</area>
            <layout>horizontal</layout>
            <style>slide</style>
            <imagetype name="background">
                <area>123,0,100%,100%</area>
                <filename>osd/slider_frame.png</filename>
            </imagetype>
            <imagetype name="progressimage">
                <area>125,2,100%,100%</area>
                <filename>osd/fill_green.png</filename>
            </imagetype>
        </progressbar>
    </window>

    <window name="program_info">
        <fontdef name="small" face="DejaVu Sans">
            <pixelsize>18</pixelsize>
            <color>#FFFFFF</color>
            <shadowoffset>1,1</shadowoffset>
            <shadowcolor>#000000</shadowcolor>
        </fontdef>
        <fontdef name="smaller" from="small">
            <pixelsize>15</pixelsize>
        </fontdef>
        <fontdef name="medium" from="small">
            <pixelsize>22</pixelsize>
        </fontdef>
        <area>62,271,675,249</area>
        <shape name="background">
            <area>0,0,100%,100%</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
            <line color="#222222" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        <textarea name="title">
            <font>medium</font>
            <area>6,8,375,25</area>
            <align>left,top</align>
        </textarea>
        <textarea name="starttime">
            <font>smaller</font>
            <area>6,42,290,25</area>
            <align>left,top</align>
            <template>%STARTTIME%-%ENDTIME% : %LENMINS%</template>
        </textarea>
        <textarea name="videowidth">
            <font>smaller</font>
            <area>300,42,300,25</area>
            <template>%VIDEOWIDTH%x%VIDEOHEIGHT%, %VIDEOFRAMERATE%fps, %VIDEOCODECDESC%</template>
            <align>left,top</align>
        </textarea>
        <clock name="clock">
            <area>481,8,187,25</area>
            <font>small</font>
            <template>%TIME%</template>
            <align>right,top</align>
        </clock>
        <imagetype name="iconpath">
            <area>19,117,81,83</area>
        </imagetype>
        <imagetype name="coverart">
            <area>-80,83,290,150</area>
            <preserveaspect>true</preserveaspect>
        </imagetype>
        <textarea name="callsign">
            <font>smaller</font>
            <area>12,208,94,25</area>
            <align>hcenter,vcenter</align>
        </textarea>
        <textarea name="description">
            <font>small</font>
            <area>125,83,537,150</area>
            <align>left,top</align>
            <multiline>yes</multiline>
            <template>%"|SUBTITLE|" %%LONGREPEAT%%(|STARS|) %%DESCRIPTION%</template>
        </textarea>

    </window>

    <window name="browse_info">
        <fontdef name="small" face="DejaVu Sans">
            <pixelsize>18</pixelsize>
            <color>#FFFFFF</color>
            <shadowoffset>1,1</shadowoffset>
            <shadowcolor>#000000</shadowcolor>
        </fontdef>
        <fontdef name="smaller" from="small">
            <pixelsize>15</pixelsize>
        </fontdef>
        <fontdef name="medium" from="small">
