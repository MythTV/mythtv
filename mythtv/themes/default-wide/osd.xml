<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>
    <window name="osd_message">
        <fontdef name="medium" face="DejaVu Sans">
            <pixelsize>26</pixelsize>
            <color>#FFFFFF</color>
            <shadowoffset>1,1</shadowoffset>
            <shadowcolor>#000000</shadowcolor>
        </fontdef>
        <area>400,50,480,70</area>
        <shape name="background">
            <area>0,0,100%,100%</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
            <line color="#222222" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        <textarea name="message_text">
            <font>medium</font>
            <area>20,20,440,30</area>
            <align>hcenter,vcenter</align>
        </textarea>
    </window>

    <window name="osd_input">
        <fontdef name="medium" face="DejaVu Sans">
            <pixelsize>26</pixelsize>
            <color>#FFFFFF</color>
            <shadowoffset>1,1</shadowoffset>
            <shadowcolor>#000000</shadowcolor>
        </fontdef>
        <area>110,50,170,70</area>
        <shape name="background">
            <area>0,0,100%,100%</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
            <line color="#222222" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        <textarea name="osd_number_entry">
            <font>medium</font>
            <area>20,20,130,30</area>
            <align>hcenter,vcenter</align>
        </textarea>
    </window>

    <window name="osd_status">
        <fontdef name="small" face="DejaVu Sans">
            <pixelsize>22</pixelsize>
            <color>#FFFFFF</color>
            <shadowoffset>1,1</shadowoffset>
            <shadowcolor>#000000</shadowcolor>
        </fontdef>
        <area>100,580,1080,90</area>
        <shape name="background">
            <area>0,0,100%,100%</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
            <line color="#222222" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        <textarea name="title">
            <font>small</font>
            <area>10,10,600,30</area>
            <align>left,top</align>
        </textarea>
        <textarea name="description">
            <font>small</font>
            <area>10,50,1060,30</area>
            <align>hcenter,bottom</align>
            <template>%DESCRIPTION% %VALUE%%UNITS%</template>
        </textarea>
        <clock name="clock">
            <area>770,10,300,30</area>
            <font>small</font>
            <template>%TIME%</template>
            <align>right,top</align>
        </clock>
        <progressbar name="position">
            <area>10,42,1060,7</area>
            <layout>horizontal</layout>
            <style>reveal</style>
            <imagetype name="background">
                <area>0,0,100%,100%</area>
                <filename>progressbar_background.png</filename>
            </imagetype>
            <imagetype name="progressimage">
                <area>0,0,100%,100%</area>
                <filename>progressbar_fill.png</filename>
            </imagetype>
        </progressbar>
    </window>

    <window name="program_info">
        <fontdef name="small" face="DejaVu Sans">
            <pixelsize>22</pixelsize>
            <color>#FFFFFF</color>
            <shadowoffset>1,1</shadowoffset>
            <shadowcolor>#000000</shadowcolor>
        </fontdef>
        <fontdef name="smaller" from="small">
            <pixelsize>18</pixelsize>
        </fontdef>
        <fontdef name="medium" from="small">
            <pixelsize>26</pixelsize>
        </fontdef>
        <area>100,370,1080,300</area>
        <shape name="background">
            <area>0,0,100%,100%</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
            <line color="#222222" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        <textarea name="title">
            <font>medium</font>
            <area>10,10,600,30</area>
            <align>left,top</align>
        </textarea>
        <textarea name="starttime">
            <font>smaller</font>
            <area>10,50,700,30</area>
            <align>left,top</align>
            <template>%STARTTIME%-%ENDTIME% : %LENMINS%</template>
        </textarea>
        <clock name="clock">
            <area>770,10,300,30</area>
            <font>small</font>
            <template>%TIME%</template>
            <align>right,top</align>
        </clock>
        <textarea name="channum">
            <font>small</font>
            <area>20,100,150,30</area>
            <align>hcenter,vcenter</align>
        </textarea>
        <imagetype name="iconpath">
            <area>30,140,130,100</area>
        </imagetype>
        <imagetype name="coverart">
            <area>30,140,100,150</area>
        </imagetype>
        <textarea name="callsign">
            <font>smaller</font>
            <area>20,250,150,30</area>
            <align>hcenter,vcenter</align>
        </textarea>
        <textarea name="description">
            <font>small</font>
            <area>200,100,860,180</area>
            <align>left,top</align>
            <multiline>yes</multiline>
            <template>%"|SUBTITLE|" %%LONGREPEAT%%(|STARS|) %%DESCRIPTION%</template>
        </textarea>
    </window>

    <window name="browse_info">
        <fontdef name="small" face="DejaVu Sans">
            <pixelsize>22</pixelsize>
            <color>#FFFFFF</color>
            <shadowoffset>1,1</shadowoffset>
            <shadowcolor>#000000</shadowcolor>
        </fontdef>
        <fontdef name="smaller" from="small">
            <pixelsize>18</pixelsize>
        </fontdef>
        <fontdef name="medium" from="small">
            <pixelsize>26</pixelsize>
        </fontdef>
        <area>100,370,1080,300</area>
        <shape name="background">
            <area>0,0,100%,100%</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
            <line color="#222222" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        <textarea name="title">
            <font>medium</font>
            <area>10,10,600,30</area>
            <align>left,top</align>
        </textarea>
        <textarea name="starttime">
            <font>smaller</font>
            <area>10,50,700,30</area>
            <align>left,top</align>
            <template>%STARTTIME%-%ENDTIME% : %LENMINS%</template>
        </textarea>
        <clock name="clock">
            <area>770,10,300,30</area>
            <font>small</font>
            <template>%TIME%</template>
            <align>right,top</align>
        </clock>
        <textarea name="channum">
            <font>small</font>
            <area>20,100,150,30</area>
            <align>hcenter,vcenter</align>
        </textarea>
        <imagetype name="iconpath">
            <area>30,140,130,100</area>
        </imagetype>
        <textarea name="callsign">
            <font>smaller</font>
            <area>20,250,150,30</area>
            <align>hcenter,vcenter</align>
        </textarea>
        <textarea name="description">
            <font>small</font>
            <area>200,100,860,180</area>
            <align>left,top</align>
            <multiline>yes</multiline>
            <template>%"|SUBTITLE|" %%LONGREPEAT%%(|STARS|) %%DESCRIPTION%</template>
        </textarea>
    </window>

    <window name="ChannelEditor">
        <fontdef name="small" face="DejaVu Sans">
            <pixelsize>22</pixelsize>
            <color>#FFFFFF</color>
            <shadowoffset>1,1</shadowoffset>
            <shadowcolor>#000000</shadowcolor>
        </fontdef>
        <fontdef name="smaller" from="small">
            <pixelsize>18</pixelsize>
        </fontdef>
        <area>390,110,500,500</area>
        <shape name="background">
            <area>0,0,100%,100%</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
            <line color="#222222" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        <textarea name="title">
            <font>small</font>
            <area>15,15,470,150</area>
            <align>allcenter</align>
            <value>Channel Editor</value>
        </textarea>

        <textarea name="callsign_label">
            <font>small</font>
            <area>10,180,130,50</area>
            <align>allcenter</align>
            <value>Callsign</value>
        </textarea>
        <textedit name="callsign">
            <area>150,180,340,50</area>
            <statetype name="background">
                <state name="active">
                    <shape name="textbackground">
                        <fill color="#BBBBBB" alpha="255" />
                    </shape>
                </state>
                <state name="selected" from="active">
                    <shape name="textbackground">
                        <fill color="#BBBBBB" alpha="200" />
                    </shape>
                </state>
                <state name="inactive" from="active" />
            </statetype>
            <imagetype name="cursor">
                <filename>cursor.png</filename>
            </imagetype>
            <textarea name="text">
                <font>small</font>
                <align>left,vcenter</align>
            </textarea>
        </textedit>

        <textarea name="channum_label" from="callsign_label">
            <area>10,250,130,50</area>
            <value>Channel #</value>
        </textarea>
        <textedit name="channum" from="callsign">
            <area>150,250,340,50</area>
        </textedit>

        <textarea name="channame_label" from="callsign_label">
            <area>10,320,130,50</area>
            <value>Channel Name</value>
        </textarea>
        <textedit name="channame" from="callsign">
            <area>150,320,340,50</area>
        </textedit>

        <textarea name="xmltv_label" from="callsign_label">
            <area>10,390,130,50</area>
            <value>XMLTV ID</value>
        </textarea>
        <textedit name="XMLTV" from="callsign">
            <area>150,390,340,50</area>
        </textedit>

        <button name="probe">
            <area>45,440,150,40</area>
            <value>Probe</value>
            <statetype name="buttonstate">
                <state name="active">
                <shape name="buttonbackground">
                    <type>roundbox</type>
                    <area>0,0,150,40</area>
                <fill color="#666666" alpha="50" />
                <cornerradius>20</cornerradius>
                </shape>
                    <textarea name="text">
                        <area>5,5,140,30</area>
                        <align>allcenter</align>
                        <font>small</font>
                        <font state="selected">small</font>
                        <font state="disabled">small</font>
                    </textarea>
                </state>
                <state name="selected" from="active">
                <shape name="buttonbackground">
                    <fill color="#ffffff" alpha="50" />
                </shape>
                </state>
                <state name="disabled" from="active" />
                <state name="pushed" from="active" />
            </statetype>
        </button>
        <button name="ok" from="probe">
            <position>305,440</position>
            <value>OK</value>
        </button>
    </window>

    <window name="osd_program_editor">
        <fontdef name="small" face="DejaVu Sans">
            <pixelsize>22</pixelsize>
            <color>#FFFFFF</color>
            <shadowoffset>1,1</shadowoffset>
            <shadowcolor>#000000</shadowcolor>
        </fontdef>
        <area>100,580,1080,90</area>
        <shape name="background">
            <area>0,0,100%,100%</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
            <line color="#222222" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        <textarea name="title">
            <area>10,10,600,30</area>
            <align>left,top</align>
            <font>small</font>
        </textarea>
        <textarea name="seekamount" from="title">
            <area>770,10,300,30</area>
            <align>right,top</align>
        </textarea>
        <textarea name="timedisplay" from="title">
            <area>10,50,1060,30</area>
            <align>hcenter,bottom</align>
        </textarea>
        <textarea name="cutindicator" from="title">
            <area>10,50,300,30</area>
            <align>left,bottom</align>
        </textarea>
        <textarea name="framedisplay" from="title">
            <area>770,50,300,30</area>
            <align>right,bottom</align>
        </textarea>
        <editbar name="editbar">
            <area>10,30,1060,30</area>
            <shape name="position">
                <area>0,0,8,100%</area>
                <fill color="#FFFFFF" alpha="255" />
            </shape>
            <shape name="keep">
                <area>0,11,100%,8</area>
                <fill color="#00FF00" alpha="255" />
                <type>roundbox</type>
                <cornerradius>6</cornerradius>
            </shape>
            <shape name="cut">
                <area>0,11,100%,8</area>
                <fill color="#FF0000" alpha="255" />
                <type>roundbox</type>
                <cornerradius>6</cornerradius>
            </shape>
            <shape name="cuttoright">
                <area>0,5,4,20</area>
                <fill color="#FF0000" alpha="255" />
            </shape>
            <shape name="cuttoleft">
                <area>0,5,4,20</area>
                <fill color="#FF0000" alpha="255" />
            </shape>
            <shape name="keeptoright">
                <area>0,5,4,20</area>
                <fill color="#00FF00" alpha="255" />
            </shape>
            <shape name="keeptoleft">
                <area>0,5,4,20</area>
                <fill color="#00FF00" alpha="255" />
            </shape>
        </editbar>
    </window>

    <window name="MythPopupBox">
        <fontdef name="basesmall" face="DejaVu Sans">
            <size>15</size>
            <color>#FFFFFF</color>
        </fontdef>
        <fontdef name="basesmallgrey" from="basesmall">
            <color>#bcbcbc</color>
        </fontdef>
        <area>-1,-1,500,500</area>
        <shape name="basebackground">
            <area>0,0,500,500</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
            <line color="#222222" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        <textarea name="messagearea">
            <area>15,15,470,210</area>
            <font>basesmall</font>
            <multiline>yes</multiline>
            <align>allcenter</align>
        </textarea>

        <buttonlist name="list">
            <area>18,225,470,250</area>
            <layout>vertical</layout>
            <spacing>4</spacing>
            <drawfrombottom>yes</drawfrombottom>
            <showarrow>yes</showarrow>
            <wrapstyle>selection</wrapstyle>
            <buttonarea>0,0,100%,97%</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,100%,30</area>
                    <shape name="buttonbackground">
                        <type>roundbox</type>
                        <area>0,0,99%,30</area>
                        <fill color="#666666" alpha="50" />
                        <cornerradius>15</cornerradius>
                    </shape>
                    <textarea name="buttontext">
                        <font>basesmallgrey</font>
                        <cutdown>yes</cutdown>
                        <align>allcenter</align>
                        <area>0,0,100%,30</area>
                    </textarea>
                    <imagetype name="buttonarrow">
                        <area>94%,7,16,16</area>
                        <filename>lb-arrow.png</filename>
                    </imagetype>
                </state>
                <state name="selectedactive" from="active">
                    <shape name="buttonbackground">
                        <type>roundbox</type>
                        <area>0,0,99%,30</area>
                        <fill color="#ffffff" alpha="50" />
                        <cornerradius>15</cornerradius>
                    </shape>
                    <textarea name="buttontext">
                        <font>basesmall</font>
                    </textarea>
                </state>
                <state name="selectedinactive" from="active">
                    <shape name="buttonbackground">
                        <type>roundbox</type>
                        <area>0,0,99%,30</area>
                        <fill color="#ffffff" alpha="50" />
                        <cornerradius>15</cornerradius>
                    </shape>
                    <textarea name="buttontext">
                        <font>basesmallgrey</font>
                    </textarea>
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <position>10,96%</position>
                <state type="full">
                    <imagetype name="upoff">
                        <area>0,0,30,30</area>
                        <filename>uparrow_alt.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <position>40,96%</position>
                <state type="full">
                    <imagetype name="dnoff">
                        <area>0,0,30,30</area>
                        <filename>downarrow_alt.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

    </window>
</mythuitheme>
