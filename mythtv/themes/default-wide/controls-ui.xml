<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>

 <window name="controls">

  <font name="active" face="Trebuchet MS">
   <color>#ffffff</color>
   <size>14</size>
   <bold>yes</bold>
  </font>

  <font name="inactive" face="Trebuchet MS">
   <color>#9999cc</color>
   <size>14</size>
   <bold>yes</bold>
  </font>

  <font name="keys" face="Trebuchet MS">
   <color>#000000</color>
   <size>18</size>
   <shadow>1,1</shadow>
   <bold>yes</bold>
  </font>

  <font name="info" face="Trebuchet MS">
   <color>#ffffff</color>
   <size>18</size>
   <shadow>1,1</shadow>
   <bold>yes</bold>
  </font>

  <font name="options" face="Trebuchet MS">
   <color>#ffffff</color>
   <size>14</size>
   <bold>yes</bold>
  </font>

  <font name="infotitle" face="Trebuchet MS">
   <color>#ffffff</color>
   <size>20</size>
   <shadow>10,10</shadow>
   <bold>yes</bold>
  </font>

  <container name="controls">
   <area>64,36,1152,508</area>

   <textarea name="options" draworder="1" align="center">
    <font>options</font>
    <area>0,0,1152,50</area>
    <value>(1) Contexts/Actions      (2) Contexts/Keys      (3) Keys/Contexts</value>
   </textarea>

   <textarea name="leftdesc" draworder="1" align="center">
    <font>info</font>
    <area>0,50,560,30</area>
    <value>Contexts</value>
   </textarea>

   <textarea name="rightdesc" draworder="1" align="center">
    <font>info</font>
    <area>592,50,560,30</area>
    <value>Actions</value>
   </textarea>

   <listbtnarea name="leftlist" draworder="0">
    <area>0,90,560,418</area>
    <gradient type="unselected" start="#505050" end="#000000" alpha="100"/>
    <gradient type="selected" start="#52CA38" end="#349838" alpha="255"/>
    <fcnfont name="active" function="active"/>
    <fcnfont name="inactive" function="inactive"/>
    <showarrow>no</showarrow>
   </listbtnarea>

   <listbtnarea name="rightlist" draworder="0">
    <area>592,90,560,418</area>
    <gradient type="unselected" start="#505050" end="#000000" alpha="100"/>
    <gradient type="selected" start="#52CA38" end="#349838" alpha="255"/>
    <fcnfont name="active" function="active"/>
    <fcnfont name="inactive" function="inactive"/>
    <showarrow>no</showarrow>
   </listbtnarea>
  </container>

  <container name="keys_layer">
   <area>64,544,1152,140</area>
   <textbutton name="action_one" draworder="0">
    <position>211,0</position>
    <image function="on" filename="kb-button-on.png"/>
    <image function="off" filename="kb-button-off.png"/>
    <font>keys</font>
   </textbutton>

   <textbutton name="action_two" draworder="0">
    <position>401,0</position>
    <image function="on" filename="kb-button-on.png"/>
    <image function="off" filename="kb-button-off.png"/>
    <font>keys</font>
   </textbutton>

   <textbutton name="action_three" draworder="0">
    <position>591,0</position>
    <image function="on" filename="kb-button-on.png"/>
    <image function="off" filename="kb-button-off.png"/>
    <font>keys</font>
   </textbutton>

   <textbutton name="action_four" draworder="0">
    <position>781,0</position>
    <image function="on" filename="kb-button-on.png"/>
    <image function="off" filename="kb-button-off.png"/>
    <font>keys</font>
   </textbutton>

   <textarea name="description" draworder="1" align="allcenter">
    <font>info</font>
    <area>0,50,1152,90</area>
    <multiline>yes</multiline>
   </textarea>

  </container>

 </window>
</mythuitheme>
