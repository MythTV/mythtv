CMDLINE_SELECT="
    $ARCH_EXT_LIST
    $CONFIG_LIST
    $HAVE_LIST_CMDLINE
    $THREADS_LIST
    asm
    cross_compile
    debug
    extra_warnings
    logging
    lto
    optimizations
    rpath
    set_cc_default
    $MYTHTV_LIST
    $MYTHTV_CONFIG_LIST
"

PATHS_LIST="
    bindir
    datadir
    docdir
    incdir
    libdir
    mandir
    pkgconfigdir
    prefix
    shlibdir
    install_name_dir
"

MYTHTV_PATHS_LIST='
    dvb_path
    libcec_path
    runprefix
    x11_path
    libxml2_path
    firewiresdk_path
'

