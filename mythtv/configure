MYTHTV_CONFIG_LIST='
    backend
    bdjava
    bindings_perl
    bindings_python
    bindings_php
    crystalhd
    cygwin
    darwin
    disable_mmx_for_debugging
    dvb
    firewire
    frontend
    hdhomerun
    vbox
    ceton
    hdpvr
    ivtv
    asi
    joystick_menu
    libcec
    libcrypto
    libdns_sd
    libfftw3
    libmpeg2external
    libxml2
    lirc
    mheg
    opengl
    opengl_video
    opengl_themepainter
    openmax
    qtwebkit
    qtscript
    qtdbus
    taglib
    v4l2
    v4l1
    valgrind
    x11
    xrandr
    xv
    profiletype
    debugtype
    mythlogserver
    systemd_notify
    systemd_journal
'

MYTHTV_HAVE_LIST='
    byteswap_h
    cpu_clips_negative
    cpu_clips_positive
    fe_can_2g_modulation
    ftime
    getifaddrs
    gettimeofday
    openmax_bellagio
    openmax_broadcom
    posix_fadvise
    libudev
    libuuid
    stdint_h
    sync_file_range
    sys_endian_h
'

MYTHTV_LIST='
    audio_pulse
    audio_pulseoutput
    audio_alsa
    audio_jack
    audio_oss
    ffmpeg_pthreads
    mac_bundle
    proc_opt
    silent_cc
    symbol_visibility
'

USING_LIST='
    appleremote
    bdjava
