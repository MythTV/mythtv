            <area>0,0,1280,720</area>
        </imagetype>

        <buttontree name="gametreelist">
            <area>8,52,1264,310</area>
            <numlists>3</numlists>
            <spacing>10</spacing>
            <buttonlist name="listtemplate" from="basebuttonlist" />
        </buttontree>

        <textarea name="title" from="basetextarea">
            <area>96,440,752,60</area>
            <font>baseextralarge</font>
        </textarea>

        <textarea name="systemlabel" from="basetextarea">
            <area>96,510,140,35</area>
            <value>System:</value>
        </textarea>

        <textarea name="system" from="basetextarea">
            <area>236,510,580,35</area>
        </textarea>

        <textarea name="yearlabel" from="systemlabel">
            <position>96,545</position>
            <value>Year:</value>
        </textarea>

        <textarea name="year" from="system">
            <position>236,545</position>
        </textarea>

        <textarea name="genrelabel" from="systemlabel">
            <position>96,580</position>
            <value>Genre:</value>
        </textarea>

        <textarea name="genre" from="system">
            <position>236,580</position>
        </textarea>

        <textarea name="favoritelabel" from="systemlabel">
            <position>96,615</position>
            <value>Favorite:</value>
        </textarea>

        <statetype name="favorite">
            <state name="no">
                <textarea name="favorite" from="basetextarea">
                    <area>236,615,580,35</area>
                    <value>No</value>
                </textarea>
            </state>
            <state name="yes" from="no">
                <textarea name="favorite">
                    <value>Yes</value>
                </textarea>
            </state>
        </statetype>

        <textarea name="description" from="system">
            <position>236,665</position>
        </textarea>

        <imagetype name="coverart">
            <area>610,500,180,150</area>
            <preserveaspect>true</preserveaspect>
        </imagetype>

        <imagetype name="screenshot">
            <area>880,500,300,196</area>
        </imagetype>

    </window>

