<mythuitheme>

<window name="browse">

    <font name="active" face="Bitstream Vera Sans">
        <color>#ffffff</color>
        <size>18</size>
        <bold>yes</bold>
    </font>
    
    <font name="inactive" face="Bitstream Vera Sans">
        <color>#c5c5c5</color>
        <size>18</size>
        <bold>yes</bold>
    </font>

    <font name="title" face="Bitstream Vera Sans">
      <color>#ffff00</color>
      <dropcolor>#000000</dropcolor>
      <size>18</size>
      <shadow>1,1</shadow>
      <bold>yes</bold>
    </font>

    <font name="desc" face="Bitstream Vera Sans">
      <color>#ffffff</color>
      <size>16</size>
      <bold>no</bold>
    </font>

    <container name="sites">

      <area>20,20,220,320</area>

      <listbtnarea name="siteslist" draworder="0">
        <area>0,0,200,300</area>
        <gradient type="unselected" start="#505050" end="#000000" alpha="100">
        </gradient>
        <gradient type="selected" start="#df0d0c" end="#990909" alpha="255">
        </gradient>
        <fcnfont name="active" function="active"></fcnfont>
        <fcnfont name="inactive" function="inactive"></fcnfont>
        <showscrollarrows>yes</showscrollarrows>
      </listbtnarea>

    </container>

    <container name="articles"> 

      <area>250,20,780,320</area>

      <listbtnarea name="articleslist"  draworder="0">
        <area>0,0,530,300</area>
        <gradient type="unselected" start="#505050" end="#000000" alpha="100">
        </gradient>
        <gradient type="selected" start="#df0d0c" end="#990909" alpha="255">
        </gradient>
        <fcnfont name="active" function="active"></fcnfont>
        <fcnfont name="inactive" function="inactive"></fcnfont>
        <showscrollarrows>yes</showscrollarrows>
        <showarrow>no</showarrow>
      </listbtnarea>

    </container>

    <container name="info"> 

      <area>0,340,800,260</area>


      <textarea name="title" draworder="1">
        <area>20,10,670,35</area>
        <font>title</font>
        <multiline>yes</multiline>
      </textarea>

      <textarea name="description" draworder="1">
        <area>170,50,610,200</area>
        <font>desc</font>
        <multiline>yes</multiline>
      </textarea>

      <textarea name="status" draworder="1">
        <area>200,10,170,35</area>
        <font>desc</font>
      </textarea>
      
      <image name="boxshot" draworder="2">
        <position>20,50</position>
        <staticsize>110,150</staticsize>
      </image>

      <image name="background" draworder="0" fleximage="no">
        <filename>mythflix_background.png</filename>
        <position>0,0</position>
      </image>

    </container>
</window>

