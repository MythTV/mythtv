<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>

    <window name="browse">

        <buttonlist name="siteslist" from="basebuttonlist">
            <wrapstyle>captive</wrapstyle>
            <area>20,20,200,300</area>
        </buttonlist>

        <buttonlist name="articleslist" from="basebuttonlist">
            <wrapstyle>captive</wrapstyle>
            <area>250,20,530,300</area>
            <showarrow>no</showarrow>
        </buttonlist>

        <textarea name="title" from="basetextarea">
            <area>20,350,670,35</area>
            <font>baselarge</font>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="description" from="basetextarea">
            <area>170,390,610,200</area>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="status" from="basetextarea">
            <area>200,350,170,35</area>
        </textarea>

        <imagetype name="boxshot">
            <area>20,390,110,150</area>
        </imagetype>

        <imagetype name="background">
            <filename>mythflix_background.png</filename>
            <position>0,340</position>
        </imagetype>

    </window>

    <window name="queue">

        <textarea name="queuename" from="basetextarea">
            <area>20,20,670,25</area>
            <font>baselarge</font>
            <multiline>no</multiline>
        </textarea>

        <buttonlist name="articleslist" from="basebuttonlist">
            <area>20,50,760,270</area>
            <showarrow>no</showarrow>
        </buttonlist>

        <textarea name="title" from="basetextarea">
            <area>20,350,670,35</area>
            <font>baselarge</font>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="description" from="basetextarea">
            <area>170,390,610,200</area>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="status" from="basetextarea">
            <area>200,350,170,35</area>
        </textarea>

        <imagetype name="boxshot">
            <area>20,390,110,150</area>
        </imagetype>

        <imagetype name="background">
            <filename>mythflix_background.png</filename>
            <position>0,340</position>
        </imagetype>

    </window>

    <window name="config">

        <buttonlist name="sites" from="basebuttonlist">
            <area>340,40,440,500</area>
            <showarrow>no</showarrow>
        </buttonlist>

        <buttonlist name="category" from="basebuttonlist">
            <area>20,40,300,500</area>
        </buttonlist>

        <textarea name="context_switch" from="basetextarea">
            <area>20,550,760,50</area>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="help" from="basetextarea">
            <area>20,90,760,150</area>
            <multiline>yes</multiline>
        </textarea>

    </window>

</mythuitheme>
