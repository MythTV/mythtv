                <textselected x="520" y="160" w="145" h="28" value="%chapternumber. %chaptertime" font="0" colour="orange" align="center"/>
            </button>
        </chapter>
		<!-- Row 2 -->
		<chapter>
			<graphic filename="%chapterthumbnail" x="55" y="190" w="145" h="110" static="True"/>
            <button x="55" y="305" w="145" h="28" filename="blank.png" mask="blank.png" static="False">
                <textnormal x="55" y="305" w="145" h="28" value="%chapternumber. %chaptertime" font="0" colour="white" align="center"/>
                <textselected x="55" y="305" w="145" h="28" value="%chapternumber. %chaptertime" font="0" colour="orange" align="center"/>
            </button>
        </chapter>
		<chapter>
			<graphic filename="%chapterthumbnail" x="210" y="190" w="145" h="110" static="True"/>
            <button x="210" y="305" w="145" h="28" filename="blank.png" mask="blank.png" static="False">
                <textnormal x="210" y="305" w="145" h="28" value="%chapternumber. %chaptertime" font="0" colour="white" align="center"/>
                <textselected x="210" y="305" w="145" h="28" value="%chapternumber. %chaptertime" font="0" colour="orange" align="center"/>
            </button>
        </chapter>
		<chapter>
			<graphic filename="%chapterthumbnail" x="365" y="190" w="145" h="110" static="True"/>
            <button x="365" y="305" w="145" h="28" filename="blank.png" mask="blank.png" static="False">
                <textnormal x="365" y="305" w="145" h="28" value="%chapternumber. %chaptertime" font="0" colour="white" align="center"/>
                <textselected x="365" y="305" w="145" h="28" value="%chapternumber. %chaptertime" font="0" colour="orange" align="center"/>
            </button>
        </chapter>
		<chapter>
			<graphic filename="%chapterthumbnail" x="520" y="190" w="145" h="110" static="True"/>
            <button x="520" y="305" w="145" h="28" filename="blank.png" mask="blank.png" static="False">
                <textnormal x="520" y="305" w="145" h="28" value="%chapternumber. %chaptertime" font="0" colour="white" align="center"/>
                <textselected x="520" y="305" w="145" h="28" value="%chapternumber. %chaptertime" font="0" colour="orange" align="center"/>
            </button>
        </chapter>
	</submenu>

    <detailspage background="GANT-Background.png" music="silence.ac3" length="5">
        <graphic filename="%thumbnail" x="40" y="40" w="290" h="220" static="False"/>
        <text x="350" y="50" w="450" h="28" value="%title" font="0" colour="yellow" static="False" align="left"/>
        <text x="350" y="80" w="450" h="25" value="%subtitle" font="1" colour="white" static="False" align="left"/>
        <text x="350" y="105" w="450" h="25" value="%recordingdate %recordingtime" font="2" colour="white" static="False" align="left"/>
        <text x="350" y="130" w="450" h="25" value="Duration %duration" font="2" colour="white" static="False" align="left"/>
        <text x="50" y="300" w="600" h="250" value="%description" font="2" colour="white" static="False" align="left"/>
    </detailspage>

</mythburntheme>
