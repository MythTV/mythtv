<?xml version="1.0" encoding="UTF-8"?>
<mythburntheme>
	<!-- Example theme for MythBurn 3 recordings per page, with scene selection submenu -->
	<fonts>
		<font size="23">FreeSans.ttf</font>
		<font size="19">FreeSans.ttf</font>
		<font size="17">FreeSans.ttf</font>
	</fonts>

    <intro filename="mythtv_intro.mpg"/>

    <menu background="GANT-Background.png">
		<!-- item holds the position of a menu item ie. recording -->
		<item>
			<text x="60" y="25" w="200" h="25" value="Page %page" font="2" colour="white" static="True" align="left"/>
			<previous filename="previous.png" x="300" y="465" w="48" h="48" mask="previous_mask.png" static="True"/>
			<graphic filename="%thumbnail" x="60" y="55" w="145" h="110" static="True"/>
			<text x="215" y="80" w="450" h="25" value="%subtitle" font="1" colour="white" static="True" align="left"/>
			<text x="215" y="100" w="450" h="25" value="%recordingdate %recordingtime" font="2" colour="white" static="True" align="left"/>
			<text x="215" y="120" w="450" h="60" value="%description" font="2" colour="white" static="True" align="left"/>
            <button x="215" y="55" w="450" h="28" filename="blank.png" mask="blank.png" static="False">
                <textnormal x="215" y="55" w="450" h="28" value="%title" font="0" colour="white" align="left"/>
                <textselected x="215" y="55" w="450" h="28" value="%title" font="0" colour="orange" align="left"/>
            </button>
        </item>
		<item>
			<graphic filename="%thumbnail" x="60" y="195" w="145" h="110" static="True" align="left"/>
			<text x="215" y="220" w="450" h="25" value="%subtitle" font="1" colour="white" static="True" align="left"/>
			<text x="215" y="240" w="450" h="25" value="%recordingdate %recordingtime" font="2" colour="white" static="True" align="left"/>
			<text x="215" y="260" w="450" h="60" value="%description" font="2" colour="white" static="True" align="left"/>
            <button x="215" y="195" w="450" h="28" filename="blank.png" mask="blank.png" static="False">
                <textnormal x="215" y="195" w="450" h="28" value="%title" font="0" colour="white" align="left"/>
                <textselected x="215" y="195" w="450" h="28" value="%title" font="0" colour="orange" align="left"/>
            </button>
        </item>
		<item>
			<graphic filename="%thumbnail" x="60" y="335" w="145" h="110" static="True"/>
			<text x="215" y="360" w="450" h="25" value="%subtitle" font="1" colour="white" static="True" align="left"/>
			<text x="215" y="380" w="450" h="25" value="%recordingdate %recordingtime" font="2" colour="white" static="True" align="left"/>
			<text x="215" y="400" w="450" h="60" value="%description" font="2" colour="white" static="True" align="left"/>
            <button x="215" y="335" w="450" h="28" filename="blank.png" mask="blank.png" static="False">
                <textnormal x="215" y="335" w="450" h="28" value="%title" font="0" colour="white" align="left"/>
                <textselected x="215" y="335" w="450" h="28" value="%title" font="0" colour="orange" align="left"/>
            </button>
            <next filename="next.png" x="375" y="465" w="48" h="48" mask = "next_mask.png" static="True"/>
        </item>
	</menu>
	
    <submenu background="GANT-Background.png">
		<!-- Describes a menu or short video that will appear after the recording has been selected -->
		<chapter>
			<graphic filename="%chapterthumbnail" x="55" y="45" w="145" h="110" static="True"/>
			<text x="55" y="335" w="500" h="28" value="%title" font="0" colour="yellow" static="True" align="left"/>
			<text x="55" y="360" w="600" h="28" value="%subtitle" font="1" colour="white" static="True" align="left"/>
			<text x="55" y="360" w="600" h="28" value="%recordingdate %recordingtime (%duration)" font="1" colour="white" static="True" align="right"/>
			<text x="55" y="390" w="595" h="150" value="%description" font="2" colour="white" static="True" align="left"/>
            <button x="55" y="160" w="145" h="28" filename="blank.png" mask="blank.png" static="False">
                <textnormal x="55" y="160" w="145" h="28" value="%chapternumber. %chaptertime" font="0" colour="white" align="center"/>
