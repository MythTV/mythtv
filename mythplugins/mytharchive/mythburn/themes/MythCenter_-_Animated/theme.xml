            <next filename="next.png" x="375" y="465" w="48" h="48" mask="next_mask.png" static="True"/>
        </item>
    </menu>

    <submenu background="MythCenter-Background.png" highlightcolor="yellow" music="menumusic2.ac3" length="10" >
