<?xml version="1.0" encoding="UTF-8"?>
<mythburntheme>
    <!-- Example theme for MythBurn 3 recordings per page, with scene selection submenu -->
    <!-- try the bold fonts instead -->
    <fonts>
        <font size="23">FreeSansBold.ttf</font>
        <font size="18">FreeSansBold.ttf</font>
        <font size="16">FreeSansBold.ttf</font>
	</fonts>

    <intro filename="mythlogo_intro.mpg"/>

    <menu background="MythCenter-Background.png" highlightcolor="yellow" music="menumusic2.ac3" length="10" >
        <!-- item holds the position of a menu item ie. recording -->
        <item>
            <text x="60" y="25" w="200" h="25" value="Page %page" font="2" colour="white" static="True" align="left"/>
            <previous filename="previous.png" x="300" y="465" w="48" h="48" mask="previous_mask.png" static="True"/>
            <graphic filename="preview-frame.png" x="55" y="50" w="155" h="120" static="False"/>
            <graphic filename="%movie" x="60" y="55" w="145" h="110" mask="preview-mask.png" static="False"/>
            <text x="215" y="55" w="450" h="28" value="%title" font="0" colour="yellow" static="False" align="left"/>
            <text x="215" y="80" w="450" h="25" value="%subtitle" font="1" colour="white" static="False" align="left"/>
            <text x="215" y="100" w="450" h="25" value="%recordingdate %recordingtime" font="2" colour="white" static="False" align="left"/>
            <text x="215" y="120" w="450" h="60" value="%description" font="2" colour="white" static="False" align="left"/>
        </item>
        <item>
            <graphic filename="preview-frame.png" x="55" y="190" w="155" h="120" static="False"/>
