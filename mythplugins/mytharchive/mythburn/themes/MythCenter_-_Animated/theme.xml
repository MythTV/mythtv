            <text x="215" y="240" w="450" h="25" value="%recordingdate %recordingtime" font="2" colour="white" static="False" align="left"/>
            <text x="215" y="260" w="450" h="60" value="%description" font="2" colour="white" static="False" align="left"/>
        </item>
        <item>
            <graphic filename="preview-frame.png" x="55" y="330" w="155" h="120" static="False"/>
            <graphic filename="%movie" x="60" y="335" w="145" h="110" mask="preview-mask.png" static="False"/>
            <text x="215" y="335" w="450" h="28" value="%title" font="0" colour="yellow" static="False" align="left"/>
            <text x="215" y="360" w="450" h="25" value="%subtitle" font="1" colour="white" static="False" align="left"/>
            <text x="215" y="380" w="450" h="25" value="%recordingdate %recordingtime" font="2" colour="white" static="False" align="left"/>
