<!--

    This is a myth style theme file for webcam settings screen in mythphone

    (c) 2003 by a whole bunch of people associated with MythTV

-->
<mythuitheme>
 

    <!--
        
        The main phone control screen

    -->

    <window name="phone_ui">
    
      	<font name="active" face="Arial">
      	    <color>#9999cc</color>
      	    <size>18</size>
      	    <bold>yes</bold>
      	</font>
      
      	<font name="inactive" face="Arial">
      	    <color>#9999cc</color>
      	    <size>18</size>
      	    <bold>yes</bold>
      	</font>
      
      	<font name="selected" face="Arial">
      	    <color>#ffff00</color>
      	    <size>18</size>
      	    <bold>yes</bold>
      	</font>
      
      	<font name="selectable" face="Arial">
      	    <color>#ffffff</color>
      	    <size>18</size>
      	    <bold>yes</bold>
      	</font>
      
        <font name="statsfont" face="Arial">
            <color>#ffffff</color>
            <size>12</size>
            <bold>yes</bold>
        </font>

        <font name="smallstatsfont" face="Arial">
            <color>#ffffff</color>
            <size>10</size>
            <bold>no</bold>
        </font>

        <font name="notificationfont" face="Arial">
            <color>#ffffff</color>
            <size>16</size>
            <bold>yes</bold>
        </font>

        <container name="background">
            <image name="filler" draworder="0" fleximage="yes">
                <filename>background.png</filename>
                <position>0,10</position>
            </image>
            <image name="titlelines" draworder="0" fleximage="no">
                <filename>trans-titles.png</filename>
                <position>0,325</position>
                <staticsize>800,235</staticsize>   
            </image>
        </container>



        <!--
            Container for the two webcam windows 
        -->

        <container name="videowindows">
            <area>0,15,800,297</area>

            <image name="localvidborder" draworder="1" fleximage="no">
                <filename>mp_video_border_352x288.png</filename>
                <position>20,0</position>
            </image>
            <image name="receivedvidborder" draworder="1" fleximage="no">
                <filename>mp_video_border_352x288.png</filename>
                <position>420,0</position>
            </image>
            <blackhole name="local_webcam_blackhole" draworder="2">
                <area>24,4,352,288</area>
            </blackhole>
            <blackhole name="mp_received_video_blackhole" draworder="2">
                <area>424,4,352,288</area>
            </blackhole>

        </container>



        <!--
            Container for audio amplitude indicators
        -->

        <container name="graphicequaliser">
            <area>0,313,800,20</area>

            <repeatedimage name="mic_amplitude" draworder="1" fleximage="no">
                <filename>mp_amp_green.png</filename>
                <position>22,0</position>
                <orientation>LeftToRight</orientation>
            </repeatedimage>

            <repeatedimage name="spk_amplitude" draworder="1" fleximage="no">
                <filename>mp_amp_green.png</filename>
                <position>422,0</position>
                <orientation>LeftToRight</orientation>
            </repeatedimage>


        </container>



        <!--
            Container for the directory browser. The volume control is in here too.
        -->

        <container name="directory_viewer">
            <area>0,325,800,220</area>

            <managedtreelist name="directorytreelist" draworder="1" bins="2">
                <!--
                    regular area, but is only used if the user has
                    ShowWholeTree set to false.
                -->
                <area>40,10,720,200</area>
                <!--
                    An image to show the current navigation node
                -->
                <image function="selectionbar" filename="mp_selectionbar.png"></image>
                <!--
                    Some arrow images
                -->
                <image function="uparrow" filename="mp_up_arrow.png"></image>
                <image function="downarrow" filename="mp_down_arrow.png"></image>
                <image function="leftarrow" filename="mp_left_arrow.png"></image>
                <image function="rightarrow" filename="mp_right_arrow.png"></image>
                
                <image function="icon" number="1" filename="mp_presence_online.png"></image>
                <image function="icon" number="2" filename="mp_presence_offline.png"></image>
                <image function="icon" number="3" filename="mp_presence_away.png"></image>

                
                <!--
                    the area of particular bins
                    you can make them show right to left,
                    top to bottom, and layer graphics on top
                    however you like

                    NB: bins number 1 to # of bins inclusive
                        not 0 to #-1


                -->
                <bin number="1">
                    <area>30,16,190,180</area>
                    <fcnfont name="active" function="active"></fcnfont>
                    <fcnfont name="inactive" function="inactive"></fcnfont>
                    <fcnfont name="selected" function="selected"></fcnfont>
                    <fcnfont name="selectable" function="selectable"></fcnfont>
                </bin>
                <bin number="2">
                    <area>235,10,535,200</area>
                    <fcnfont name="active" function="active"></fcnfont>
                    <fcnfont name="selected" function="selected"></fcnfont>
                    <fcnfont name="inactive" function="inactive"></fcnfont>
                    <fcnfont name="selectable" function="selectable"></fcnfont>
                </bin>
            </managedtreelist>

            <!--

                An image that go "on top" of the list bins

            -->

            <image name="showinglines" draworder="2" fleximage="yes">
                <filename>showings.png</filename>
                <position>0,0</position>
                <staticsize>800,235</staticsize>
            </image>


        <!--
            On screen volume / brightness / contrast display
        -->

            <image name="volumebkgnd" draworder="-1" fleximage="no">
                <filename>mp_volume_bkgnd.png</filename>
                <position>235,30</position>
            </image>
            <statusbar name="volume_status" draworder="-1" whitespace="5">
                <container fleximage="no">mp_slider_status_back.png</container>
                <fill>mp_slider_status_fore.png</fill>
                <position>330,45</position>
                <orientation>LeftToRight</orientation>
            </statusbar>
            <image name="volumeicon" draworder="-1" fleximage="no">
                <filename>mp_volume_icon.png</filename>
                <staticsize>50,60</staticsize>
                <position>260,45</position>
            </image>
            <textarea name="volume_setting_text" draworder="-1" align="center">
                <font>statsfont</font>
                <area>280,90,230,23</area>
                <cutdown>yes</cutdown>
            </textarea>
            <textarea name="volume_value_text" draworder="-1" align="center">
                <font>statsfont</font>
                <area>280,110,230,23</area>
                <cutdown>yes</cutdown>
            </textarea>
            <textarea name="volume_info_text" draworder="-1" align="center">
                <font>smallstatsfont</font>
                <area>240,135,320,15</area>
                <cutdown>yes</cutdown>
            </textarea>


        </container>

        <container name="phone_status">
            <area>0,550,800,35</area>

            <image name="status_background" draworder="0" fleximage="no">
                <filename>mp_status_bkgnd.png</filename>
                <position>0,0</position>
            </image>

            <textarea name="caller_text" draworder="1" align="left">
                <font>statsfont</font>
                <area>25,10,200,23</area>
                <cutdown>yes</cutdown>
            </textarea>

            <textarea name="audio_stats_text" draworder="1" align="left">
                <font>statsfont</font>
                <area>230,10,265,23</area>
                <cutdown>yes</cutdown>
            </textarea>

            <textarea name="video_stats_text" draworder="1" align="left">
                <font>statsfont</font>
                <area>500,10,210,23</area>
                <cutdown>yes</cutdown>
            </textarea>

            <textarea name="call_time_text" draworder="1" align="left">
                <font>statsfont</font>
                <area>715,10,90,23</area>
                <cutdown>yes</cutdown>
            </textarea>

            <textarea name="status_msg_text" draworder="2" align="center">
                <font>notificationfont</font>
                <area>50,8,700,23</area>
                <cutdown>yes</cutdown>
            </textarea>

        </container>

    </window>
</mythuitheme>
