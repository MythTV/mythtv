<mythuitheme>

    <window name="mainmenu">

        <font name="menufont" face="Arial">
            <color>#FFFFFF</color>
            <size>20</size>
            <bold>yes</bold>
            <outlinecolor>#000000</outlinecolor>
            <outlinesize>2</outlinesize>
        </font>

        <imagetype name="logo">
            <position>120,36</position>
            <filename>mythtv-logo.png</filename>
        </imagetype>

        <clock name="clock">
            <area>280,44,415,40</area>
            <font>medium</font>
            <align>right</align>
            <format>%DATE% %TIME%</format>
        </clock>

        <buttonlist name="menu">
            <area>75,100,750,480</area>
            <layout>vertical</layout>
            <spacing>20</spacing>
            <wrapstyle>selection</wrapstyle>
            <buttonarea>0,0,750,480</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,649,60</area>
                    <imagetype name="background" />
                    <textarea name="buttontext">
                        <area>10,0,624,52</area>
                        <font>menufont</font>
                        <align>allcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>
                </state>
                <state name="selected" from="active">
                    <imagetype name="background">
                        <filename>button_on.png</filename>
                    </imagetype>
                </state>
            </statetype>
