<mythuitheme>

    <font name="small" face="Nimbus Sans L">
        <color>#FFFFFF</color>
        <size>14</size>
        <size:small>12</size:small>
        <size:big>16</size:big>
        <bold>yes</bold>
    </font>

    <font name="medium" from="small">
        <size>16</size>
        <size:small>14</size:small>
        <size:big>20</size:big>
    </font>

    <font name="large" from="small">
        <size>20</size>
        <size:small>18</size:small>
        <size:big>22</size:big>
    </font>

    <font name="basefont"  face="Nimbus Sans L">
        <color>#ffffff</color>
        <dropcolor>#3B4045</dropcolor>
        <size>20</size>
        <size:small>18</size:small>
        <size:big>22</size:big>
        <shadow>2,2</shadow>
        <bold>yes</bold>
    </font>

    <font name="title" from="basefont" face="Arial Black">
        <!--<color>#ffffdd</color>-->
        <color>#DEEAF9</color>
        <dropcolor>#000000</dropcolor>
        <size>22</size>
        <size:big>24</size:big>
        <size:small>18</size:small>
    </font>

    <font name="subtitle" from="basefont"  face="Arial Black">
        <color>#ffffdd</color>
        <size>18</size>
        <size:big>20</size:big>
        <size:small>16</size:small>
    </font>

    <font name="info" from="basefont">
        <size>18</size>
        <shadow>2,2</shadow>
    </font>

    <font name="metadata" from="info">
        <size>18</size>
        <color>#ffffdd</color>
    </font>

    <font name="help" from="info">
        <shadow>2,2</shadow>
        <color>#aaaaee</color>
    </font>

    <font name="description" from="info">
        <shadow>2,2</shadow>
    </font>

    <font name="small-info" from="info">
        <size>14</size>
        <shadow>1,1</shadow>
        <size:small>12</size:small>
        <size:big>17</size:big>
    </font>

    <font name="list-active" from="basefont" face="Nimbus Sans L">
        <size>19</size>
        <size:small>15</size:small>
        <size:big>21</size:big>
        <shadow>2,2</shadow>
        <color>#ddddff</color>
    </font>

    <font name="list-inactive" from="list-active">
        <color>#aaaaee</color>
    </font>

    <font name="list-record" from="list-active">
        <color>#33ff33</color>
    </font>

    <font name="list-recording" from="list-active">
        <color>#ff5544</color>
    </font>

    <font name="list-norecord" from="list-active">
        <color>#999999</color>
    </font>

    <font name="list-conflict"  from="list-active">
        <color>#dddd33</color>
    </font>

    <font name="list-selected"  from="list-active">
        <color>#ffffff</color>
    </font>

    <font name="list-selectable" from="list-active">
        <color>#ddddff</color>
    </font>

    <font name="recstatus" from="info">
        <color>#ffff33</color>
        <dropcolor>#000000</dropcolor>
        <shadow>2,2</shadow>
    </font>

    <window name="backgroundwindow">
        <imagetype name="backimg">
            <filename>button-background.jpg</filename>
        </imagetype>
    </window>

</mythuitheme>

